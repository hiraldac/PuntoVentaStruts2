
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<!-- Author: labtw04 -->
 
<struts>
    <package name="venta" namespace="/pages/venta" extends="struts-default">     
        <action name="actionCrearVenta" 
                class="controller.VentaController">
            <result>/pages/usuario/crearVenta.jsp</result>
        </action>
        
        <action name="actionAgregarCarrito" 
                class="controller.VentaController"
                method="agregarCarrito">
            <result name="error">/pages/venta/error.jsp</result>
            <result name="success">/pages/venta/crearVenta.jsp</result>
        </action>
        
        <action name="actionMostrarVentas"
                class="controller.VentaController"
                method="obtenerRegistros">
            <result name="success">/pages/venta/mostrarVentas.jsp</result>
            <result name="error">/pages/venta/errorVenta.jsp</result>
        </action>
        
        <action name="actionMostrarVenta"
                class="controller.VentaController"
                method="obtenerRegistro">
            <result name="success">/pages/venta/mostrarVenta.jsp</result>
            <result name="error">/pages/venta/errorVenta.jsp</result>
        </action>
        
        <action name="actionEliminarVenta"
                class="controller.VentaController"
                method="obtenerRegistros">
            <result name="success">/pages/venta/mostrarVentas.jsp</result>
            <result name="error">/pages/venta/errorVenta.jsp</result>
        </action>
        
        <action name="actionTerminarVenta"
                class="controller.VentaController"
                method="obtenerRegistros">
            <result name="success">/pages/venta/mostrarVenta.jsp</result>
            <result name="error">/pages/venta/errorVenta.jsp</result>
        </action>
    </package>
</struts>
